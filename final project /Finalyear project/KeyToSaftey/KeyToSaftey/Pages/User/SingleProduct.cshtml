@page
@model KeyToSaftey.Pages.User.SingleProductModel

@{
    ViewData["Title"] = "SingleProduct";
    Layout = "~/Pages/Shared/_Layout1.cshtml";
}

<script src="~/assets/js/jquery/jquery-1.10.1.min.js"></script>
<link href="~/LightBox/lightbox.css" rel="stylesheet" />
<script src="~/LightBox/lightbox-plus-jquery.js"></script>
<form method="post">


    <div class="container main-container headerOffset">
        <div class="row">
            <div class="breadcrumbDiv col-lg-12">
                <ul class="breadcrumb">
                    <li>
                        <a href="Index">Home</a>
                    </li>
                    <li>
                        <a href="@Html.DisplayFor(model => model.Product.Catagory)List">@Html.DisplayFor(model => model.Product.Catagory)</a>
                    </li>

                    <li class="active">@Html.DisplayFor(model => model.Product.Pname)</li>
                </ul>
            </div>
        </div>

        <div class="row transitionfx">

            <div class="col-lg-6 col-md-6 col-sm-6">
                <!-- product Image and Zoom -->  <div id="mdb-lightbox-ui"></div>

                <div class="mdb-lightbox">
                    <div class="main-image sp-wrap col-lg-12 no-padding" style="display: inline-block;">
                        <div class="sp-large" style="overflow: hidden; height: auto; left: 0px; top: 0px;">



                            @{
                                byte[] bytes = Model.Product.Pimg;
                                string base64String = "data:image/jpg;base64," + Convert.ToBase64String(bytes, 0, bytes.Length);

                            }


                            <a class="example-image-link" href="@base64String" data-lightbox="example-1">
                                <img src="@base64String" class="img-responsive" alt="img">
                            </a>

                            @*<div class="sp-zoom" style="display: block; left: 391px; top: 388px;">

                        <img src="~/images/product_details/hi-res-croped/3.jpg" />
                    </div>*@
                        </div>
                        <div class="sp-thumbs sp-tb-active">

                            @foreach (var item in Model.Image)
                            {
                                byte[] bytes1 = item.Image1;
                                string base64String1 = "data:image/jpg;base64," + Convert.ToBase64String(bytes1, 0, bytes1.Length);

                                <a class="example-image-link" href="@base64String1" data-lightbox="example-1">
                                    <img src="@base64String1" class="img-fluid" alt="img">
                                </a>
                                <div class="mask rgba-white-slight"></div>
                            }


                        </div>
                    </div>
                    </div>
                </div>

                <!-- left column -->
                <!-- right column -->
                <div class="col-lg-6 col-md-6 col-sm-5">

                    <h1 class="product-title">
                        @Html.DisplayFor(model => model.Product.Pname)
                    </h1>



                    <div class="rating">
                        <p>
                            <span><i class="fa fa-star"></i></span>
                            <span><i class="fa fa-star"></i></span>
                            <span>
                                <i class="fa fa-star"></i>
                            </span>
                            <span><i class="fa fa-star"></i></span>
                            <span>
                                <i class="fa fa-star-o "></i>
                            </span>
                            <span class="ratingInfo">
                                <span> / </span> <a data-toggle="modal" data-target="#modal-review"> Write a review</a>
                            </span>
                        </p>
                    </div>
                    <div class="product-price">
                        ₹@Html.DisplayFor(model => model.Product.Pprice)
                    </div>

                    <div class="details-description">
                        <p>@Html.DisplayFor(model => model.Product.Pdes)</p>

                    </div>



                    <div class="productFilter productFilterLook2">
                        <div class="row">
                            <div class="col-lg-6 col-sm-6 col-xs-6">
                                <h2> Quantity</h2>
                                <div class="filterBox">
                                    <div>
                                        <span> <i class="ti-minus"></i></span>
                                        <input id="qty" name="qty" value="1" min="0" max="10">
                                        <input type="hidden" name="pid" id="pid" value="@Model.Product.Pid" />
                                        <span> <i class="ti-plus"></i></span>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- productFilter -->

                    <div class="cart-actions">
                        <div class="addto row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <a href="Cart">
                                    <button class="button btn-block btn-cart cart first" title="Add to Cart" type="submit">
                                        Add
                                        to Cart
                                    </button>
                                </a>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <a class="link-wishlist wishlist btn-block ">
                                    Add
                                    to Wishlist
                                </a>
                            </div>
                        </div>

                        <div style="clear:both"></div>

                        <h3 class="incaps">
                            <i class="fa fa fa-check-circle-o color-in"></i> In stock
                        </h3>

                        <h3 style="display:none" class="incaps">
                            <i class="fa fa-minus-circle color-out"></i> Out of stock
                        </h3>

                        <h3 class="incaps">
                            <i class="glyphicon glyphicon-lock"></i> Secure online ordering
                        </h3>
                    </div>
                    <!--/.cart-actions-->

                    <div class="clear"></div>

                    <div class="product-share clearfix">
                        <p> SHARE </p>

                        <div class="socialIcon">
                            <a href="#"> <i class="fa fa-facebook"></i></a>
                            <a href="#"> <i class="fa fa-twitter"></i></a>
                            <a href="#"> <i class="fa fa-google-plus"></i></a>
                            <a href="#"> <i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                    <!--/.product-share-->

                </div>
                <!--/ right column end -->

            </div>


        <div style="clear:both"></div>


    </div>

</form>
<div class="gap"></div>




