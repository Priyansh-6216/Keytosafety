@page
@model KeyToSaftey.Pages.Admin.BlogDeleteModel

@{
    ViewData["Title"] = "BlogDelete";
    Layout = "~/Pages/Shared/_Layout1.cshtml";
}

<div class="container main-container headerOffset globalPaddingBottom">

    <h1 style="text-align:center; font-weight:bold">Are you sure you want to delete this?</h1>
   
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Blog.Date)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Blog.Bname)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Blog.Bimage)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Blog.Bauthor)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Blog.Bstatus)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Blog.Bdetails)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Blog.Date)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Blog.Bname)
                </td>
                <td>
                    <div class="form-group">

                        @{
                            byte[] bytes = Model.Blog.Bimage;
                            string base64String = "data:image/jpg;base64," + Convert.ToBase64String(bytes, 0, bytes.Length);

                        }
                        <img src="@base64String" width="100" height="100" />

                    </div>

                </td>
                <td>
                    @Html.DisplayFor(model => model.Blog.Bauthor)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Blog.Bstatus)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Blog.Bdetails)
                </td>
            </tr>
        </tbody>
    </table>

    <form method="post">
        <input type="hidden" asp-for="Blog.Bid" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./ABlogList" class="btn btn-default">Back to List</a>
    </form>
</div>
