@page
@model KeyToSaftey.Pages.Admin.ALoginModel

@{
    ViewData["Title"] = "ALogin";
    Layout = "~/Pages/Shared/_Layout1.cshtml";
}

<div class="container main-container headerOffset">
        
    <div class="row">
        <h1 style="text-align:center; font-weight:bold">Admin Login</h1>
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li class="active"> Authentication</li>
            </ul>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-9 col-md-9 col-sm-7">
            <h1 class="section-title-inner"><span><i class="fa fa-lock"></i> Authentication</span></h1>

            <div class="row userInfo">

                <div class="col-xs-12 col-sm-6">
                    <h2 class="block-title-2"><span>Already registered?</span></h2>

                    <form role="form" class="regForm" method="post">

                        <div class="form-group">
                            <label>Mobile</label>
                            <input asp-for="AdminSignup.Amobile" class="form-control" placeholder="Enter Mobile no" required="" aria-required="true" />

                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" asp-for="AdminSignup.Apassword" placeholder="Password" aria-required="true" class="form-control" />

                        </div>
                        <div class="error">
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
                            {
                                <div class="badge badge-danger">
                                    @ViewData.ModelState["Error"].Errors.First().ErrorMessage
                                </div>
                            }
                        </div>


                        <button type="submit" class="btn   btn-primary">
                            <i class="fa fa-user"></i> Sign In
                        </button>


                    </form>


                </div>

            </div>
            <!--/row end-->

        </div>

        <div class="col-lg-3 col-md-3 col-sm-5"></div>
    </div>
    <!--/row-->

    <div style="clear:both"></div>
</div>
<!-- /wrapper -->

<div class="gap"></div>