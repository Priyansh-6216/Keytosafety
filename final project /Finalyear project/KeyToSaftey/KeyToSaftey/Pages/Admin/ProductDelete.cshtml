@page
@model KeyToSaftey.Pages.Admin.ProductDeleteModel

@{
    ViewData["Title"] = "ProductDelete";
    Layout = "~/Pages/Shared/_Layout1.cshtml";
}


<div class="container main-container headerOffset globalPaddingBottom">

    <h1 style="text-align:center; font-weight:bold">Are you sure you want to delete this?</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Pname)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Product.Pdes)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Product.Catagory)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Product.Pimg)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Product.Pprice)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.Product.Qnt)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Product.Pname)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Product.Pdes)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Product.Catagory)
                </td>
                <td>
                    <div class="form-group">

                        @{
                            byte[] bytes = Model.Product.Pimg;
                            string base64String = "data:image/jpg;base64," + Convert.ToBase64String(bytes, 0, bytes.Length);

                        }
                        <img src="@base64String" width="100" height="100" />

                    </div>

                </td>
                <td>
                    @Html.DisplayFor(model => model.Product.Pprice)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Product.Qnt)
                </td>
            </tr>
        </tbody>
    </table>

    <form method="post" >
        <input type="hidden" asp-for="Product.Pid" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./AviewProduct" class="btn btn-default">Back to List</a>
    </form>
</div>
