@page
@model KeyToSaftey.Pages.Admin.ABlogListModel

@{
    ViewData["Title"] = "ABlogList";
    Layout = "~/Pages/Shared/_Layout1.cshtml";
}

<link href="~/css/widgEditor.css" rel="stylesheet" />

<section class="blog-intro parallaxOffset parallaxbg">
    <img src="~/images/blog/b2.jpg" style="   background-image: url('file:///D:\Finalyear project\KeyToSaftey\KeyToSaftey\wwwroot\images\b2.jpg');
        background-size: cover" width="1200" height="600" />

    <div class="overlay-shade"></div>
    <div class="background-overly g6"></div>
</section>
<!--/.blog-intro -->
<div class="gap"></div>
<div class="gap"></div>
<p class="right">
    <a asp-page="AddBlog"class="btn bg-primary">Create New </a>
</p>
<div class="gap"></div>

<div class="blog-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-centered blog-left">
                <div class="bl-inner">
                    @foreach (var item in Model.Blog)
                    {

                        <div class="item-blog-post">
                            <div class="post-header clearfix">
                                <h2 class="wow  fadeIn  " data-wow-duration="0.2s">
                                    <a href="ABlogdetails?id=@item.Bid">
                                        @Html.DisplayFor(modelItem => item.Bname)
                                    </a>
                                </h2>

                                <div class="post-info">
                                    by <span><a class="userBy">@Html.DisplayFor(modelItem => item.Bauthor)</a></span> on
                                    <p><span> @Html.DisplayFor(modelItem => item.Date)</span></p>


                                </div>
                            </div>
                            <div class="post-main-view">
                                <div class="post-lead-image  wow fadeInDown  " data-wow-duration="0.2s">
                                    <a href="ABlogdetails?id=@item.Bid">
                                        @{
                                            byte[] bytes = item.Bimage;
                                            string base64String = "data:image/jpg;base64," + Convert.ToBase64String(bytes, 0, bytes.Length);

                                        }
                                        <img src="@base64String" />
                                    </a>
                                </div>
                                <div class="post-description  wow fadeInDown  " data-wow-duration="0.2s">
                                    <p>
                                        @Html.Raw(item.Bpara).
                                    </p>
                                    <a href="ABlogdetails?id=@item.Bid" class="btn btn-more">
                                        See More <i class="fa fa-long-arrow-right"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-11">
                                    <div class="share-gallery pull-right no-float-xs">
                                        <a asp-page="./BlogUpdate" class="btn bg-primary" asp-route-id="@item.Bid">Edit</a> |
                                        <a asp-page="./ABlogdetails" class="btn bg-primary" asp-route-id="@item.Bid">Details</a> |
                                        <a asp-page="./BlogDelete" class="btn bg-primary" asp-route-id="@item.Bid">Delete</a>

                                    </div>
                                </div>

                            </div>
                        </div>
                        <!--/.item-blog-post-->

                        <hr />

                    }

                    <!--/.item-blog-post-->

                    <div class="loadMoreBlog clearfix text-center"><a class="btn  btn-block"> LOAD MORE </a></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/.blogwrapper -->

<div class="gap"></div>
